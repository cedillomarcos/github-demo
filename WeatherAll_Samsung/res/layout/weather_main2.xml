<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
         android:id="@+id/style3_info_frame"
   	     android:layout_width="200px"
   	     android:layout_height="200px"
   	     android:orientation="vertical"
   	     android:background="@color/testcolor1"
         > 
         <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
			    android:layout_width="160px"
			    android:layout_height="120px"
			    android:layout_marginLeft="20px"
			    android:layout_marginTop="20px"      
			    >
		        <ImageView
			        android:id="@+id/style3_icon"
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:background="@color/testcolor4"
                  android:src = "@drawable/accu_302"/>
			     <TextView				   
				     android:id="@+id/style3_temperature"									      
				     android:layout_width="fill_parent"
				     android:layout_height="120px"
				     android:paddingTop="60px"
				     android:textColor="@color/description"
				     android:textSize = "40px"
				     android:text="@string/temperature"				    
				     android:gravity="center"				    
				     android:layout_marginLeft="10px"/> 
		 </FrameLayout>	        		 
		 <TextView				   
		     android:id="@+id/style3_city"									      
		     android:layout_width="180px"
		     android:layout_height="30px"
		     android:textColor="@color/description"
		     android:textSize = "20px"
		     android:text="@string/city"				    
		     android:gravity="center"
		     android:layout_marginLeft="10px"/>	
		 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	   	     android:id="@+id/style2_info_frame"
	   	     android:layout_width="180px"
	   	     android:layout_height="30px"
	   	     android:layout_marginLeft="10px"
	         > 	    
			<TextView				   
			    android:id="@+id/style3_ltempreature"									      
			    android:layout_width="90px"
			    android:layout_height="30px"
			    android:textColor="@color/description"
			    android:textSize = "18px"
			    android:textStyle="bold"
			    android:text="@string/temperature"				    
			    android:gravity="center"
			    />
			<TextView				   
			    android:id="@+id/style3_htempreature"									      
			    android:layout_width="90px"
			    android:layout_height="30px"
			    android:textColor="@color/description"
			    android:textSize="18px"
			    android:textStyle="bold"
			    android:text="@string/temperature"				    
			    android:gravity="center"
			   />
		 </LinearLayout> 
    </LinearLayout> 