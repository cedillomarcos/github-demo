<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
 
    <com.rlk.scene.SceneSurfaceView2 android:id="@+id/surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
     
    <!--liyang add android:visibility="gone"-->
    <RelativeLayout android:background="@drawable/bottom_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
		android:visibility="gone">

        <Button
            android:id="@+id/sms"
            android:layout_marginLeft="45dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sms" />
		<TextView android:id="@+id/unread_sms"
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content"  
			android:layout_alignTop="@+id/sms"
			android:layout_alignRight="@+id/sms"
			android:textStyle="bold"  
			android:textColor="#FFF" 
			android:gravity="center|top"
			android:background="@drawable/icon_dian" 
			android:visibility="invisible" />

        <Button android:id="@+id/home" 
            android:layout_toRightOf="@+id/sms"
            android:background="@drawable/home"
            android:layout_marginLeft="22dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/phone"
            android:layout_toRightOf="@+id/home"
            android:layout_marginLeft="22dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/phone" />
		<TextView android:id="@+id/unread_phone"
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content"  
			android:layout_alignTop="@+id/phone"
			android:layout_alignRight="@+id/phone"
			android:textStyle="bold"  
			android:textColor="#FFF" 
			android:gravity="center|top"
			android:background="@drawable/icon_dian" 
			android:visibility="invisible" />
    </RelativeLayout>    
   <RelativeLayout 
    android:layout_marginTop="-25dp"
    android:id="@+id/enterview"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/scene_door"> 
     </RelativeLayout>   
</RelativeLayout>
